<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> <strong>errors</strong> prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li>
      <strong><%= message %></strong>
    </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<p>
  <%= link_to 'Show', book_path(@book.id) %>
  |
  <%= link_to 'Back', "/books" %>
</p>